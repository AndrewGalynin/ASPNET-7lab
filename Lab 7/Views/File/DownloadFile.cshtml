@model Lab_7.Models.FileViewModel

<h2>Download File</h2>

<form asp-controller="File" asp-action="DownloadFile" method="post">
    <div class="form-group">
        <label asp-for="FirstName">Ім'я:</label>
        <input asp-for="FirstName" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Прізвище:</label>
        <input asp-for="LastName" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="FileName">Назва файлу:</label>
        <input asp-for="FileName" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Продовжити</button>
</form>


